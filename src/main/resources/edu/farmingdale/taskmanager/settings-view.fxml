<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="900" stylesheets="@styles/style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="edu.farmingdale.taskmanager.Controllers.SettingsController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="220" spacing="40" styleClass="container">
            <padding><Insets bottom="10" left="10" right="10" top="25" /></padding>

            <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="⚔️ Back to Main Page" />
            <Button fx:id="profileBtn" onAction="#openProfile" text="Profile" />
            <Button fx:id="gameBtn" onAction="#openGameSettings" text="Game Settings" />
            <Button fx:id="soundBtn" onAction="#openSoundSettings" text="Sound Settings" />
            <Button fx:id="securityBtn" onAction="#openSecurity" text="Account Security" />
            <Button fx:id="deactivateBtn" onAction="#openDeactivate" text="Deactivate Account" />
            <Button fx:id="parentalBtn" onAction="#openParental" text="Parental Controls" />
            <Button fx:id="logoutBtn" onAction="#logout" text="Logout" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #CBB186;" styleClass="container">
            <Label style="-fx-font-size: 18; -fx-text-fill: #3B2E1D;" text="Select a setting to view details" />
        </StackPane>
    </center>

</BorderPane>
