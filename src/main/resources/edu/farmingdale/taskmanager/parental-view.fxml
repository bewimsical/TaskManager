<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="1024" prefWidth="1440" styleClass="attacks-label" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.taskmanager.Controllers.ParentalControlsController">

    <children>


        <!-- Page Title -->
        <Label alignment="TOP_LEFT" layoutX="427.0" layoutY="36.0" prefHeight="101.0" prefWidth="421.0" style="-fx-font-size: 40px; -fx-text-fill: #6b350e;" text="Parental Controls">
            <font>
                <Font name="System Bold" size="16.0" />
            </font></Label>


        <VBox layoutX="209.0" layoutY="161.0" prefHeight="637.0" prefWidth="834.0" spacing="25" styleClass="combo-box">

            <VBox spacing="20">

                <!-- User Age Row -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="814.0" spacing="10">
                    <Label style="-fx-font-size: 18px; -fx-font-family: 'Inknut Antiqua'; -fx-font-weight: bold;" styleClass="attacks-label" text="User Age:" textFill="#6f4f1d" />
                    <Label fx:id="ageLabel" style="-fx-font-size: 18px; -fx-font-family: 'Inknut Antiqua'; -fx-text-fill: #000;" />
                </HBox>

                <!-- Adult Status Row -->
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="attacks-label">
                    <Label style="-fx-font-size: 18px; -fx-font-family: 'Inknut Antiqua'; -fx-font-weight: bold;" styleClass="menu-label" text="Adult Status:" textFill="#6f4f1d" />
                    <Label fx:id="adultLabel" style="-fx-font-size: 18px; -fx-text-fill: #000;" />
                </HBox>

            </VBox>



            <CheckBox fx:id="parentalToggle" onAction="#toggleParentalControls" style="-fx-font-size: 20px;" text="Enable Parental Controls" textFill="#513812" />

            <!-- Explanation Section -->
            <Label style="-fx-font-size: 16px;" text="When Parental Controls are enabled, the following settings are locked:" textFill="#5e3d0b" />

            <VBox prefHeight="277.0" prefWidth="815.0" spacing="8" style="-fx-font-size: 15px;">
                <Label text="• Change Password disabled" textFill="#5e3d0b" />
                <Label text="• Change Email disabled" textFill="#5e3d0b" />
                <Label text="• Change Username disabled" textFill="#5e3d0b" />
                <Label text="• Deactivate Account restricted" textFill="#5e3d0b" />
                <Label text="• Security settings limited" textFill="#5e3d0b" />
            </VBox>

            <Label fx:id="statusLabel" style="-fx-font-size: 18px; -fx-text-fill: green;" />

        </VBox>

    </children>
</AnchorPane>
